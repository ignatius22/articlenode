<h1 class="container mt-5" style="font-family: fantacy;">{{title}}</h1>
<form action="/articles/edit/{{_id}}" method="POST" style="width: 500px;" class="container ml-10">
    <div class="form-group">
    <label for="">Title</label>
    <input class="form-control" name="title" type="text" class="title" value={{article.title}}>
    </div>
    <div class="form-group">
    <label for="">Author</label>
    <input class="form-control" name="author" type="text" value={{article.author}}>
    </div>
    <div class="form-group">
     <label for="">Body</label>
    <textarea class="form-control" name="body" rows="3">{{article.body}}</textarea>
    </div>
    <input type="submit" value="post" class="btn btn-primary float-none">
</form>
