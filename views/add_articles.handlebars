<h1 class="container mt-5" style="font-family: fantacy;">{{title}}</h1>

<form action="/articles/add" method="POST" style="width: 500px;" class="container ml-10">
    <div class="form-group">
    <label for="">Title</label>
    <input class="form-control" name="title" type="text" class="title">
    </div>
    <div class="form-group">
    <label for="">Author</label>
    <input class="form-control" name="author" type="text">
    </div>
    <div class="form-group">
     <label for="">Body</label>
    <textarea class="form-control" name="body" rows="3"></textarea>
    </div>
    <input type="submit" value="post" class="btn btn-primary float-none">
    
</form>